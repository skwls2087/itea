<?xml version="1.0" encoding="UTF-8"  ?>
<!-- xml선언부-->

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- element(요소)    attribute(속성성)
           최상위 element는 무조건 1개여야만 한다
 -->
 
<!-- myBatis-config.xml의     mapper로 반드시 등록되어야 한다 --> 
<mapper namespace="member">

	<!-- 아이디 찾기 조예인
	<select id="find_id" parameterType="Hashmap" resultType="Hashmap">
		select mmail from member 
		where mname = #{mname} 
			and mphone = #{mphone}
	</select>-->
	
	<!-- 아이디 찾기 
	<select id="find_id" resultType="string">
		select ifnull(mmail, 0) from member 
    where mname = #{mname} 
    	and mphone = #{mphone}
	</select>-->
	
	<!-- 아이디 찾기 -->
	<select id="find_id" resultType="memberDTO">
		select ifnull(mmail, 0) from member 
    where mname = #{mname} 
    	and mphone = #{mphone}
	</select>
	
	
	<!-- 비밀번호 변경 조예인-->
	<update id="update_pw" parameterType="memberDTO">
		update member set mpw = #{mpw} 
		where mmail = #{mmail}
			and mname = #{mname}
	</update>
	

	<!-- 회원수 조회 신나진-->
	<!-- select쿼리의 실행결과의  컬럼수가    1개이면    자바의 데이터타입을 지정 -->
	<select id="login" resultType="memberDTO">
		select *
		from member
		where mmail=#{mmail} and mpw=#{mpw}
	</select>
	
</mapper>













